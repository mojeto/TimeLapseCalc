<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.mojeto.timelapsecalc.app"
    android:installLocation="preferExternal" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FrameRateActivity"
            android:label="@string/title_activity_frame_rate"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mojeto.timelapsecalc.app.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SumOfFramesActivity"
            android:label="@string/title_activity_sum_of_frames"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mojeto.timelapsecalc.app.activities.MainActivity" />
        </activity>
    </application>

</manifest>
